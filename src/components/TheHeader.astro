---
export interface Props {
  title: string;
  game?: string;
  isHomepage?: boolean;
}

const { title = "Миросоздание", game, isHomepage = false } = Astro.props;
---

{!isHomepage && (
<nav
  class="w-full py-2 border-b flex top-0 sticky bg-white text-xs md:text-sm"
>
  <div class="flex-1 font-semibold">
    <a href="/" class="hover:underline">
          Миросоздание
      </a>
      <span class="text-gray-400">/</span>
    {
      game && (
        <a href="./" class="hover:underline">
          {game}
        </a>
        <span class="text-gray-400">/</span>
      )
    }
    <a href="#" class="hover:underline">{title}</a>
  </div>
</nav>
)}